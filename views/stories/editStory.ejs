<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Story | Diary</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&family=Merriweather:wght@400;700&display=swap');

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            -webkit-font-smoothing: antialiased;
        }

        /* Reading Focus Typography */
        .editor-textarea {
            font-family: 'Merriweather', serif;
            line-height: 1.8;
            font-size: 1.125rem;
        }

        /* UI Polish */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: #f8fafc; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }

        /* Loading Overlay (Preserved Logic) */
        .loading-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background-color: rgba(255, 255, 255, 0.9); 
            backdrop-filter: blur(8px);
            display: flex; flex-direction: column; justify-content: center; align-items: center;
            z-index: 1000; opacity: 0; visibility: hidden;
            transition: all 0.5s ease;
        }
        .loading-overlay.active { opacity: 1; visibility: visible; }

        .progress-bar-container {
            width: 280px; height: 6px; background-color: #f1f5f9;
            border-radius: 10px; margin-top: 24px; overflow: hidden;
        }
        .progress-fill {
            height: 100%; width: 0%; background-color: #4f46e5; 
            transition: width 0.2s ease;
        }

        @keyframes spin { to { transform: rotate(360deg); } }
        .spinner {
            width: 40px; height: 40px; border: 3px solid #e2e8f0;
            border-radius: 50%; border-top-color: #4f46e5; 
            animation: spin 0.8s linear infinite;
        }
    </style>
</head>

<body class="bg-slate-50 text-slate-900 overflow-x-hidden">

    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
        <div class="mt-6 text-lg font-bold text-slate-800">Updating your story...</div>
        <div class="progress-bar-container">
            <div class="progress-fill" id="progressBar"></div>
        </div>
        <div class="mt-8 text-center opacity-0 transform translate-y-4 transition-all duration-500" id="successMessage">
            <i class="ri-checkbox-circle-fill text-green-500 text-5xl"></i>
            <p class="mt-2 text-xl font-bold text-slate-900">Changes Saved!</p>
        </div>
    </div>

    <div id="main-wrapper" class="min-h-screen flex flex-col">
        <form id="storyForm" action="/stories/<%= editStory._id %>?_method=PUT" method="post" enctype="multipart/form-data" class="flex flex-col flex-1">

            <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200">
                <div class="max-w-5xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
                    <a href="/stories" class="flex items-center gap-2">
                        <i class="ri-quill-pen-fill text-2xl text-indigo-600"></i>
                        <span class="font-black tracking-tighter text-xl">DIARY.</span>
                    </a>
                    
                    <div class="flex items-center gap-4">
                        <a href="/stories/<%= editStory._id %>" class="text-sm font-bold text-slate-400 hover:text-slate-600 transition-colors mr-2">Cancel</a>
                        <button type="button" id="publishButton" class="bg-indigo-600 text-white px-6 py-2.5 rounded-full font-bold text-sm shadow-lg shadow-indigo-200 hover:bg-indigo-700 transition-all active:scale-95">
                            Save Changes
                        </button>
                    </div>
                </div>
            </header>

            <main class="flex-1 overflow-y-auto">
                <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
                    
                    <textarea name="title" rows="1" placeholder="Story Title" 
                        class="w-full bg-transparent text-4xl md:text-6xl font-extrabold text-slate-900 placeholder-slate-200 border-none focus:ring-0 outline-none resize-none overflow-hidden mb-12" required oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'><%= editStory.title %></textarea>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
                        
                        <div class="space-y-3">
                            <label class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 ml-1">Story Cover</label>
                            <div class="relative group h-40">
                                <input type="file" name="editStory[image]" accept="image/jpeg, image/png, image/jpg" id="image-input" class="hidden" />
                                
                                <label for="image-input" id="upload-button-container" class="w-full h-full <%= editStory.image ? 'hidden' : 'flex' %> flex-col items-center justify-center border-2 border-dashed border-slate-300 rounded-3xl cursor-pointer hover:bg-white hover:border-indigo-400 transition-all">
                                    <i class="ri-image-add-line text-3xl text-slate-300"></i>
                                    <span class="mt-2 text-xs font-bold text-slate-400">Upload Cover</span>
                                </label>

                                <div id="image-preview-container" class="<%= editStory.image ? 'block' : 'hidden' %> h-full relative">
                                    <img id="image-preview" class="w-full h-full object-cover rounded-3xl border border-slate-200 shadow-sm" src="<%= editStory.image ? editStory.image.url : '' %>" alt="Preview" />
                                    <label for="image-input" class="absolute inset-0 flex items-center justify-center bg-slate-900/40 backdrop-blur-sm rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
                                        <span class="bg-white px-4 py-2 rounded-full text-[10px] font-black uppercase tracking-wider shadow-xl">Replace Image</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-3">
                            <label for="categoryFilter" class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 ml-1">Genre</label>
                            <div class="relative">
                                <select id="categoryFilter" name="category" required class="w-full h-40 appearance-none p-6 bg-white border border-slate-200 text-slate-900 rounded-3xl focus:ring-2 ring-indigo-500/20 outline-none transition-all font-bold text-sm">
                                    <option value="<%= editStory.category %>" selected><%= editStory.category %></option>
                                    <option value="fantasy">Fantasy</option>
                                    <option value="random-thoughts">Random Thoughts</option>
                                    <option value="poetry">Poetry</option>
                                    <option value="letter">Letter</option>
                                    <option value="mystery">Mystery</option>
                                    <option value="drama">Adventure</option>
                                    <option value="historical">Historical</option>
                                    <option value="fiction">Fiction</option>
                                    <option value="other">Other</option>
                                </select>
                                <div class="absolute right-6 top-1/2 -translate-y-1/2 pointer-events-none opacity-30">
                                    <i class="ri-arrow-down-s-line text-xl"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pt-10 border-t border-slate-200">
                        <textarea name="story" id="story-textarea" placeholder="Continue your story..." 
                            class="editor-textarea w-full bg-transparent p-0 text-slate-700 placeholder-slate-300 border-none focus:ring-0 outline-none resize-none min-h-[500px]" required><%= editStory.story %></textarea>
                    </div>
                </div>
            </main>
        </form>
    </div>

    <script>
        const imageInput = document.getElementById("image-input");
        const uploadButtonContainer = document.getElementById("upload-button-container");
        const imagePreviewContainer = document.getElementById("image-preview-container");
        const imagePreview = document.getElementById("image-preview");

        imageInput.addEventListener("change", function(event) {
            const file = event.target.files[0];
            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    uploadButtonContainer.classList.add('hidden');
                    imagePreviewContainer.classList.remove('hidden');
                    imagePreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        const publishButton = document.getElementById("publishButton");
        const storyForm = document.getElementById("storyForm");
        const loadingOverlay = document.getElementById("loadingOverlay");
        const progressBar = document.getElementById("progressBar");
        const successMessage = document.getElementById("successMessage");

        publishButton.addEventListener("click", function() {
            if (!storyForm.checkValidity()) {
                storyForm.reportValidity();
                return;
            }

            loadingOverlay.classList.add("active");

            let progress = 0;
            const interval = setInterval(() => {
                progress += 2;
                progressBar.style.width = `${progress}%`;

                if (progress >= 100) {
                    clearInterval(interval);
                    successMessage.classList.add("opacity-100", "translate-y-0");
                    
                    setTimeout(() => {
                        storyForm.submit();
                    }, 1200);
                }
            }, 30);
        });

        // Initialize textarea height
        window.onload = () => {
            const titleArea = document.querySelector('textarea[name="title"]');
            titleArea.style.height = titleArea.scrollHeight + "px";
        }
    </script>
</body>

</html>