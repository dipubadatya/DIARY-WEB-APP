<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
  
    <title>Find People | DIARY.</title>
    
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        accent: '#3b82f6',
                        darkBg: '#121212',
                        darkSurface: '#1e1e1e'
                    },
                    fontFamily: {
                        sans: ['Plus Jakarta Sans', 'Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; -webkit-font-smoothing: antialiased; }
        
        .search-result-item {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .search-result-item:hover {
            @apply bg-slate-50 dark:bg-white/5;
            transform: translateX(6px);
        }

        .no-scrollbar::-webkit-scrollbar { display: none; }
    </style>
</head>

<body class="bg-slate-50 dark:bg-darkBg text-slate-900 dark:text-slate-100 transition-colors duration-300">

    <div class="max-w-4xl mx-auto px-6 py-8 lg:py-16">
        
        <header class="mb-10 flex items-start justify-between">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <a href="/stories" class="lg:hidden w-10 h-10 flex items-center justify-center bg-white dark:bg-darkSurface rounded-full shadow-sm border border-slate-100 dark:border-white/5 text-slate-500 hover:text-accent">
                        <i class="ri-arrow-left-line text-xl"></i>
                    </a>
                    <h1 class="text-3xl font-black tracking-tight uppercase">Find People.</h1>
                </div>
                <p class="text-slate-500 dark:text-slate-400 font-medium ml-0 lg:ml-1">Search the community by username or real name.</p>
            </div>

            <a href="/stories" class="hidden lg:flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-darkSurface rounded-2xl border border-slate-100 dark:border-white/5 shadow-sm text-xs font-black uppercase tracking-widest text-slate-400 hover:text-accent transition-all hover:shadow-md">
                <i class="ri-home-4-line"></i> Back to Section
            </a>
        </header>

        <div class="bg-white dark:bg-darkSurface rounded-[2.5rem] shadow-xl shadow-slate-200/40 dark:shadow-none border border-slate-100 dark:border-white/5 overflow-hidden">
            
            <div class="relative border-b border-slate-100 dark:border-white/5">
                <div class="absolute inset-y-0 left-0 pl-8 flex items-center pointer-events-none text-slate-400">
                    <i class="ri-search-2-line text-xl"></i>
                </div>
                <input type="text" id="searchBar" placeholder="Search by name or @username..."
                    class="w-full py-8 pl-16 pr-20 bg-transparent focus:outline-none text-lg font-semibold placeholder-slate-700 dark:placeholder-slate-800" 
                    autocomplete="off" autocorrect="off" spellcheck="false" />
                
                <button id="clearSearch"
                    class="absolute inset-y-0 right-0 pr-8 flex items-center text-slate-300 hover:text-red-500 transition-colors hidden">
                    <i class="ri-close-circle-fill text-2xl"></i>
                </button>
            </div>

            <div id="userList" class="divide-y divide-slate-50 dark:divide-white/5 min-h-[300px]">
                <div id="emptyState" class="py-24 text-center">
                    <div class="mx-auto w-20 h-20 rounded-full bg-slate-50 dark:bg-white/5 flex items-center justify-center text-slate-300 mb-6">
                        <i class="ri-user-search-line text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold tracking-tight">Discovery Mode</h3>
                    <p class="text-slate-400 mt-2 max-w-xs mx-auto text-sm">Enter a name to search the community archives.</p>
                </div>
            </div>

            <div id="loadingState" class="hidden py-16 flex flex-col items-center justify-center gap-4">
                <div class="animate-spin rounded-full h-10 w-10 border-2 border-slate-100 dark:border-white/10 border-t-accent"></div>
                <span class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-400">Updating Results</span>
            </div>
        </div>
    </div>

    <div class="popover-container hidden" id="popover-template">
        <div class="flex items-center justify-between p-4 border-b dark:border-white/5">
            <h3 class="text-xs font-black uppercase">Preview</h3>
            <button class="close-popover"><i class="ri-close-line"></i></button>
        </div>
        <div class="popover-content"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchBar = document.getElementById("searchBar");
            const userList = document.getElementById("userList");
            const loadingState = document.getElementById("loadingState");
            const clearSearch = document.getElementById("clearSearch");
            const emptyState = document.getElementById("emptyState");
            let searchTimeout;

            // Logic: Clear Search Preserved
            clearSearch.addEventListener("click", function () {
                searchBar.value = "";
                userList.innerHTML = '';
                userList.appendChild(emptyState);
                clearSearch.classList.add("hidden");
                searchBar.focus();
            });

            // Logic: UI Handling Preserved
            searchBar.addEventListener("input", function () {
                if (searchBar.value.trim() === "") {
                    clearSearch.classList.add("hidden");
                    userList.innerHTML = '';
                    userList.appendChild(emptyState);
                    loadingState.classList.add("hidden");
                } else {
                    clearSearch.classList.remove("hidden");
                }
            });

            // Logic: The Debounced Search Engine (100% Original)
            searchBar.addEventListener("input", function () {
                const query = searchBar.value.trim();
                clearTimeout(searchTimeout);

                if (query === "") return;

                loadingState.classList.remove("hidden");
                userList.innerHTML = '';

                searchTimeout = setTimeout(async function () {
                    try {
                        const response = await fetch(`/username/${encodeURIComponent(query)}`);
                        if (!response.ok) throw new Error('Failed');
                        const users = await response.json();

                        loadingState.classList.add("hidden");

                        if (users.length > 0) {
                            userList.innerHTML = users.map(user => `
                                <a href="/profile/${user._id}" class="block search-result-item">
                                    <div class="flex items-center p-6">
                                        <div class="flex-shrink-0">
                                            <img src="${user.image?.url || 'https://via.placeholder.com/48'}" 
                                                class="w-14 h-14 rounded-full object-cover ring-4 ring-slate-50 dark:ring-white/5" 
                                                onerror="this.src='https://via.placeholder.com/48'"/>
                                        </div>
                                        <div class="ml-5 flex-1 min-w-0">
                                            <div class="flex items-center gap-2">
                                                <h3 class="text-base font-bold text-slate-900 dark:text-white truncate">${user.name || "Anonymous User"}</h3>
                                                ${user.verified ? `<i class="ri-checkbox-circle-fill text-accent text-sm"></i>` : ''}
                                            </div>
                                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mt-0.5">@${user.username}</p>
                                        </div>
                                        <div class="ml-4 opacity-20 group-hover:opacity-100 transition-opacity">
                                            <i class="ri-arrow-right-up-line text-2xl"></i>
                                        </div>
                                    </div>
                                </a>
                            `).join("");
                        } else {
                            userList.innerHTML = `
                                <div class="py-24 text-center">
                                    <div class="mx-auto w-16 h-16 rounded-full bg-slate-50 dark:bg-white/5 flex items-center justify-center text-slate-300 mb-6">
                                        <i class="ri-user-unfollow-line text-2xl"></i>
                                    </div>
                                    <h3 class="text-lg font-bold">No Users Found</h3>
                                    <p class="text-slate-400 mt-1 text-sm">Check the username spelling and try again.</p>
                                </div>
                            `;
                        }
                    } catch (error) {
                        console.error(error);
                        loadingState.classList.add("hidden");
                        userList.innerHTML = `<div class="py-24 text-center text-red-400 font-bold">Failed to connect to server.</div>`;
                    }
                }, 350);
            });

            searchBar.focus();
        });

        // Logic: Close Popover and Remove Item Preserved
        document.addEventListener('click', (e) => {
            if (e.target.closest('.close-popover')) {
                const pop = e.target.closest('.popover-container');
                if(pop) pop.style.display = 'none';
            }
            if (e.target.closest('.remove-user')) {
                const item = e.target.closest('.user-item');
                if(item) item.remove();
            }
        });
    </script>
</body>

</html>