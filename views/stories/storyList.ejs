<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Stories | DIARY.</title>

  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            accent: '#3b82f6',
            slateCustom: { 50: '#f8fafc', 900: '#0f172a', 950: '#020617' }
          }
        }
      }
    }
  </script>

  <style>
    body { -webkit-font-smoothing: antialiased; overflow-x: hidden; }
    
    /* Editorial Grid: 2 columns on mobile, auto on PC */
    .story-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    @media (min-width: 768px) {
      .story-grid {
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2.5rem;
      }
    }

    .glass-dock {
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .dark .glass-dock {
      background: rgba(15, 23, 42, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .category-pill {
      @apply px-4 py-1.5 rounded-full border border-slate-200 dark:border-slate-800 text-[10px] font-black uppercase tracking-widest transition-all whitespace-nowrap bg-white dark:bg-slate-900 text-slate-500;
    }

    /* Logic: Visual Indicator for Chosen Category */
    .category-pill.active {
      background-color: #3b82f6 !important;
      border-color: #3b82f6 !important;
      color: white !important;
      box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
    }
    
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  </style>
</head>

<body class="bg-white dark:bg-slateCustom-950 text-slateCustom-900 dark:text-slate-100 transition-colors duration-500">

  <div id="preloader" class="fixed inset-0 z-[100] flex items-center justify-center bg-white dark:bg-slateCustom-950">
    <div class="w-10 h-10 border-2 border-slate-200 dark:border-slate-800 border-t-accent rounded-full animate-spin"></div>
  </div>

  <header class="sticky top-0 z-50 w-full border-b border-slate-100 dark:border-slate-900 bg-white/80 dark:bg-slateCustom-950/80 backdrop-blur-md">
    <div class="max-w-5xl mx-auto px-6 h-20 flex justify-between items-center">
      <a href="/stories" class="text-2xl font-bold tracking-tighter flex items-center gap-2">
        <span class="bg-accent w-8 h-8 rounded-lg flex items-center justify-center text-white text-base">D</span>
        DIARY<span class="text-accent">.</span>
      </a>

      <div class="flex items-center gap-4">
        <button id="theme-toggle" class="w-10 h-10 flex items-center justify-center rounded-xl hover:bg-slate-50 dark:hover:bg-slate-900 transition-all">
          <i id="theme-icon" class="ri-moon-clear-line text-xl"></i>
        </button>

        <% if(currUser) { %>
          <div class="relative">
            <button id="profile-btn" class="flex items-center gap-2 p-1 pr-3 bg-slate-50 dark:bg-slate-900 rounded-full hover:ring-2 ring-accent/20 transition-all">
              <img src="<%=user.image.url%>" class="w-8 h-8 rounded-full object-cover" alt="Profile">
              <span class="text-xs font-bold hidden sm:block"><%=user.username%></span>
            </button>
            <div id="profile-dropdown" class="hidden absolute right-0 mt-3 w-60 bg-white dark:bg-slate-900 rounded-2xl shadow-2xl border border-slate-100 dark:border-slate-800 py-2 z-[70]">
                <div class="px-4 py-3 border-b dark:border-slate-800 mb-1">
                  <p class="text-sm font-bold truncate"><%=user.name%></p>
                  <p class="text-[10px] text-slate-500 uppercase">@<%=user.username%></p>
                </div>
                <a href="/dashbord" class="block px-4 py-2.5 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-dashboard-line mr-2"></i> Dashboard</a>
                <a href="/profile" class="block px-4 py-2.5 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-user-line mr-2"></i> Profile</a>
                <div class="border-t border-slate-50 dark:border-slate-800 mt-1">
                  <a href="/logout" class="flex items-center gap-3 px-4 py-2.5 text-sm text-red-500 hover:bg-red-50 transition-colors"><i class="ri-logout-box-line mr-2"></i> Logout</a>
                </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 md:px-6 py-8 md:py-16">
    
    <section class="mb-12">
        <h1 class="text-4xl md:text-7xl font-black leading-none tracking-tighter mb-4 uppercase">Latest <span class="text-accent italic">Insights.</span></h1>
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
            <p class="text-slate-400 text-sm md:text-xl italic">"Where overthinking meets clarity."</p>
            <div class="relative w-full md:w-80 group">
                <i class="ri-search-line absolute left-4 top-1/2 -translate-y-1/2 text-slate-300 group-focus-within:text-accent transition-colors"></i>
                <input id="searchInput" type="text" placeholder="Search archives..." 
                    class="w-full pl-10 pr-4 py-2.5 bg-slate-50 dark:bg-white/5 border-none rounded-xl focus:ring-1 ring-accent/30 outline-none text-sm font-bold shadow-inner">
            </div>
        </div>
    </section>

    <section class="mb-8 md:mb-12 flex flex-col md:flex-row md:items-center justify-between gap-4 border-b border-slate-50 dark:border-white/5 pb-6">
        <div class="flex-grow overflow-x-auto no-scrollbar">
            <div id="pills-container" class="flex gap-2"></div>
            <select id="categoryFilter" class="hidden">
                <option value="">All</option>
                <option value="fantasy">Fantasy</option>
                <option value="random-thoughts">Thoughts</option>
                <option value="poetry">Poetry</option>
                <option value="letter">Letter</option>
                <option value="mystery">Mystery</option>
                <option value="drama">Adventure</option>
                <option value="historical">Historical</option>
                <option value="fiction">Fiction</option>
                <option value="other">Other</option>
            </select>
        </div>
        <select id="sortStories" class="bg-transparent text-[10px] font-black uppercase tracking-[0.2em] border-none focus:ring-0 cursor-pointer text-slate-400 hover:text-accent">
            <option value="newest">Recent First</option>
            <option value="oldest">Oldest First</option>
        </select>
    </section>

    <section id="content-area" class="relative">
        <div id="skeleton-loader" class="hidden story-grid">
            <% for(let i=0; i<4; i++) { %>
                <div class="space-y-4 animate-pulse">
                    <div class="aspect-square md:aspect-[16/11] bg-slate-100 dark:bg-white/5 rounded-2xl md:rounded-[2.5rem]"></div>
                    <div class="h-4 bg-slate-100 dark:bg-white/5 rounded w-3/4"></div>
                    <div class="h-4 bg-slate-100 dark:bg-white/5 rounded w-1/2"></div>
                </div>
            <% } %>
        </div>

        <div id="stories-grid" class="story-grid transition-opacity duration-300">
            <% for(stories of storyData) { %>
                <article class="editorial-card group">
                    <a href="/stories/<%= stories._id %>" class="block space-y-3">
                        <div class="relative aspect-square md:aspect-[16/11] overflow-hidden rounded-2xl md:rounded-[2.5rem] bg-slate-50 dark:bg-white/5 shadow-sm">
                            <img src="<%= stories.image.url %>" class="w-full h-full object-cover grayscale-[0.2] group-hover:grayscale-0" loading="lazy">
                            <div class="absolute top-3 left-3">
                                <span class="px-2 py-1 bg-white/95 dark:bg-slate-950/95 backdrop-blur-md rounded-lg text-[8px] md:text-[10px] font-black uppercase tracking-widest shadow-sm"><%= stories.category || 'Thought' %></span>
                            </div>
                        </div>
                        <div class="space-y-2 px-1">
                            <div class="flex items-center gap-2 text-[8px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest">
                                <span class="text-accent flex items-center gap-1"><i class="ri-eye-line"></i> <%= stories.views.length %></span>
                                <span class="opacity-20">â€¢</span>
                                <span id="date"><%= stories.timeStamp %></span>
                            </div>
                            <h3 class="text-sm md:text-2xl font-bold leading-tight line-clamp-2 group-hover:text-accent transition-colors"><%= stories.title %></h3>
                        </div>
                    </a>
                    
                    <div class="pt-4 md:pt-6 mt-4 md:mt-6 border-t border-slate-50 dark:border-white/5 flex items-center justify-between px-1">
                        <div class="flex items-center gap-2">
                            <img src="<%= stories.owner.image.url %>" class="w-6 h-6 md:w-8 md:h-8 rounded-full object-cover grayscale group-hover:grayscale-0">
                            <span class="text-[10px] md:text-xs font-bold truncate max-w-[70px] md:max-w-none"><%= stories.owner.username %></span>
                        </div>
                        <i class="ri-bookmark-3-line text-slate-300 md:text-lg"></i>
                    </div>
                </article>
            <% } %>
        </div>
    </section>

    <section class="mt-24 pt-12 border-t  mb-16 border-slate-50 dark:border-white/5">
        <h2 class="text-[10px] font-black uppercase tracking-[0.4em] mb-10 opacity-40">Top Contributors</h2>
        <div class="flex gap-10 overflow-x-auto no-scrollbar pb-6">
          <% for (const writers of topFiveWriters) { %>
            <a href="/writers/<%=writers._id%>" class="flex-shrink-0 flex flex-col items-center group text-center w-24">
              <img class="w-16 h-16 rounded-full object-cover ring-2 ring-transparent group-hover:ring-accent transition-all duration-500" src="<%= writers.image.url %>" alt="">
              <h3 class="text-[10px] font-bold mt-3 uppercase tracking-tighter"><%= writers.username %></h3>
            </a>
          <% } %>
        </div>
    </section>
  </main>

  <% if(currUser) { %>
    <nav class="fixed bottom-6 left-0 right-0 z-[60] px-4 pointer-events-none">
      <div class="max-w-md mx-auto glass-dock rounded-[2.5rem] p-2 shadow-2xl flex items-center justify-between pointer-events-auto">
        <a href="/chat" class="w-12 h-12 flex items-center justify-center rounded-full relative">
          <i class="ri-chat-smile-2-line text-xl md:text-2xl"></i>
          <span id="message-dot" class="hidden absolute top-3 right-3 w-2.5 h-2.5 bg-accent rounded-full ring-4 ring-white dark:ring-slate-900 animate-pulse"></span>
        </a>
        <a href="/followers/<%=currUser._id%>" class="w-12 h-12 flex items-center justify-center rounded-full"><i class="ri-team-line text-xl md:text-2xl"></i></a>
        
        <a href="/stories/newWrite" class="w-14 h-14 md:w-16 md:h-16 bg-slate-950 dark:bg-white text-white dark:text-slate-950 rounded-full flex items-center justify-center shadow-2xl transform -translate-y-6 hover:scale-110 active:scale-95 transition-all">
          <i class="ri-add-line text-3xl md:text-4xl"></i>
        </a>
        
        <a href="/notification" class="w-12 h-12 flex items-center justify-center rounded-full relative">
          <i class="ri-notification-4-line text-xl md:text-2xl"></i>
          <span id="red-dot" class="hidden absolute top-3 right-3 w-2.5 h-2.5 bg-red-500 rounded-full ring-4 ring-white dark:ring-slate-900 animate-pulse"></span>
        </a>
        <a href="/profile" class="w-12 h-12 flex items-center justify-center rounded-full"><i class="ri-user-line text-xl md:text-2xl"></i></a>
      </div>
    </nav>
  <% } %>

  <script>
    if (localStorage.getItem('theme') === 'dark') document.documentElement.classList.add('dark');
    document.getElementById('theme-toggle').onclick = () => {
      const isDark = document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    };

    const pBtn = document.getElementById('profile-btn');
    if(pBtn) pBtn.onclick = (e) => { e.stopPropagation(); document.getElementById('profile-dropdown').classList.toggle('hidden'); };
    window.onclick = () => document.getElementById('profile-dropdown')?.classList.add('hidden');

    const nSelect = document.getElementById('categoryFilter');
    const pContainer = document.getElementById('pills-container');
    
    // LOGIC: Maintain selected category color
    const renderPills = () => {
        pContainer.innerHTML = '';
        Array.from(nSelect.options).forEach(opt => {
          const b = document.createElement('button');
          b.innerText = opt.text;
          // Apply active class if selected
          b.className = `category-pill ${nSelect.value === opt.value ? 'active' : ''}`;
          
          b.onclick = () => {
            nSelect.value = opt.value;
            // Immediate UI feedback before AJAX starts
            document.querySelectorAll('.category-pill').forEach(p => p.classList.remove('active'));
            b.classList.add('active');
            updateStories();
          };
          pContainer.appendChild(b);
        });
    }
    renderPills();

    function formatDates() {
      document.querySelectorAll('#date').forEach(el => {
        const d = el.innerText.replace('Last edited: ', '').trim();
        if(d) el.innerText = moment(new Date(d)).fromNow();
      });
    }
    formatDates();

    window.onload = () => { gsap.to("#preloader", { opacity: 0, display: 'none', duration: 0.5 }); };

    function checkBadges() {
      fetch('/check-unread-notifications').then(r => r.json()).then(d => {
        const dot = document.getElementById("red-dot");
        if(dot) dot.classList.toggle("hidden", d.unreadCount <= 0);
      });
      fetch('/check-unread-messages').then(r => r.json()).then(d => {
        const msgDot = document.getElementById("message-dot");
        if(msgDot) msgDot.classList.toggle("hidden", d.unreadCount <= 0);
      });
    }
    setInterval(checkBadges, 5000);
    checkBadges();

    function updateStories() {
        const search = document.getElementById("searchInput").value;
        const category = nSelect.value;
        const sort = document.getElementById("sortStories").value;
        
        const grid = document.getElementById("stories-grid");
        const loader = document.getElementById("skeleton-loader");

        grid.style.opacity = '0';
        loader.classList.remove('hidden');

        fetch(`/stories?search=${search}&category=${category}&sort=${sort}`)
          .then(res => res.text()).then(html => {
            const doc = new DOMParser().parseFromString(html, "text/html");
            grid.innerHTML = doc.getElementById("stories-grid").innerHTML;
            formatDates();
          }).finally(() => {
            loader.classList.add('hidden');
            grid.style.opacity = '1';
          });
    }
    document.getElementById("searchInput").oninput = updateStories;
    document.getElementById("sortStories").onchange = updateStories;
  </script>
</body>
</html>
