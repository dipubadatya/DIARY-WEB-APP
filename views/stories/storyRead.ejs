
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <meta name="description" content="<%=pageDescription%>">
  <title><%=pageTitle %> | DIARY.</title>

  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/0790e1818c.js" crossorigin="anonymous"></script>

  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            accent: '#3b82f6',
            slateCustom: { 50: '#f8fafc', 900: '#0f172a', 950: '#020617' }
          },
          fontFamily: {
            serif: ['Georgia', 'serif'],
            sans: ['Inter', 'system-ui', 'sans-serif'],
          }
        }
      }
    }
  </script>

  <style>
    body { -webkit-font-smoothing: antialiased; overflow-x: hidden; }
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
    .dark ::-webkit-scrollbar-thumb { background: #334155; }

    /* Reading Focus Typography */
    .story-body {
      font-family: 'Merriweather', serif;
      line-height: 2;
      font-size: 1.125rem;
      white-space: pre-wrap;
    }

    .glass-dock {
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .dark .glass-dock {
      background: rgba(15, 23, 42, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .popover-container {
      position: absolute; width: 300px; background: white; border-radius: 12px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.15); z-index: 1000; overflow: hidden;
    }
    .dark .popover-container { background: #1e1e1e; border: 1px solid #333; }

    .no-scrollbar::-webkit-scrollbar { display: none; }
  </style>
</head>

<body class="bg-white dark:bg-slateCustom-950 text-slateCustom-900 dark:text-slate-100 transition-colors duration-500">

  <div id="preloader" class="fixed inset-0 z-[100] flex items-center justify-center bg-white dark:bg-slateCustom-950">
    <div class="flex flex-col items-center">
      <div class="w-12 h-12 border-2 border-slate-200 dark:border-slate-800 border-t-accent rounded-full animate-spin"></div>
    </div>
  </div>

  <div id="modal" class="fixed inset-0 bg-slate-950/60 backdrop-blur-sm z-[100] hidden items-center justify-center p-6">
    <div class="bg-white dark:bg-darkCard rounded-[2rem] p-8 max-w-sm w-full shadow-2xl">
      <h3 class="text-2xl font-bold mb-2">Delete Story?</h3>
      <p class="text-slate-500 dark:text-slate-400 mb-8 text-sm">This action is permanent and cannot be reversed.</p>
      <div class="flex gap-3">
        <button id="cancelBtn" class="flex-1 px-4 py-3 bg-slate-100 dark:bg-slate-800 rounded-xl font-bold">Cancel</button>
        <form action="/stories/<%=story._id%>/delete?_method=DELETE" method="post" class="flex-1">
          <button class="w-full px-4 py-3 bg-red-500 text-white rounded-xl font-bold">Delete</button>
        </form>
      </div>
    </div>
  </div>

  <header class="sticky top-0 z-50 w-full border-b border-slate-100 dark:border-slate-900 bg-white/80 dark:bg-slateCustom-950/80 backdrop-blur-md">
    <div class="max-w-5xl mx-auto px-6 h-20 flex justify-between items-center">
      <a href="/stories" class="text-2xl font-bold tracking-tighter flex items-center gap-2">
        <span class="bg-accent w-8 h-8 rounded-lg flex items-center justify-center text-white text-base">D</span>
        DIARY<span class="text-accent">.</span>
      </a>

      <div class="flex items-center gap-4">
        <button id="theme-toggle" class="w-10 h-10 flex items-center justify-center rounded-xl hover:bg-slate-50 dark:hover:bg-slate-900 transition-all">
          <i id="theme-icon" class="ri-moon-clear-line text-xl"></i>
        </button>

        <% if(currUser) { %>
          <div class="relative">
            <button id="profile-btn" class="flex items-center gap-2 p-1 pr-3 bg-slate-50 dark:bg-slate-900 rounded-full hover:ring-2 ring-accent/20 transition-all">
              <img src="<%=user.image.url%>" class="w-8 h-8 rounded-full object-cover" alt="Profile">
              <span class="text-xs font-bold hidden sm:block"><%=user.username%></span>
            </button>
            <div id="profile-dropdown" class="hidden absolute right-0 mt-3 w-60 bg-white dark:bg-slate-900 rounded-2xl shadow-2xl border border-slate-100 dark:border-slate-800 py-2 z-[70]">
                <div class="px-4 py-3 border-b dark:border-slate-800 mb-1">
                  <p class="text-sm font-bold truncate"><%=user.name%></p>
                  <p class="text-[10px] text-slate-500 uppercase">@<%=user.username%></p>
                </div>
                <a href="/dashbord" class="block px-4 py-2.5 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-dashboard-line mr-2"></i> Dashboard</a>
                <a href="/profile" class="block px-4 py-2.5 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-user-line mr-2"></i> Profile</a>
                <div class="border-t border-slate-50 dark:border-slate-800 mt-1">
                  <a href="/logout" class="flex items-center gap-3 px-4 py-2.5 text-sm text-red-500 hover:bg-red-50 transition-colors"><i class="ri-logout-box-line mr-2"></i> Logout</a>
                </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </header>

  <% if(success && success.length){ %>
    <div id="toast-success" class="fixed top-24 right-6 z-[80] bg-white dark:bg-darkCard border-l-4 border-green-500 shadow-2xl p-4 rounded-xl flex items-center gap-4 animate-bounce">
      <div class="bg-green-100 dark:bg-green-900/30 p-2 rounded-lg text-green-600"><i class="ri-checkbox-circle-fill text-xl"></i></div>
      <p class="text-sm font-bold"><%= success %></p>
    </div>
  <% } %>

  <main class="max-w-3xl mx-auto px-6 py-16">
    <header class="mb-12 text-center">
      <h1 class="font-serif text-4xl md:text-6xl font-light mb-8 leading-tight dark:text-white uppercase tracking-tight"><%=story.title%></h1>
      
      <div class="flex items-center justify-center gap-4 mb-10">
        <img src="<%=story.owner.image.url%>" class="w-12 h-12 rounded-full object-cover ring-2 ring-accent/20">
        <div class="text-left">
          <a href="/profile/<%=story.owner._id%>" class="block font-bold hover:text-accent transition-colors"><%=story.owner.username%></a>
          <span id="story-date" class="text-[10px] font-black text-slate-400 uppercase tracking-widest" data-date="<%=story.timeStamp%>"></span>
        </div>
      </div>

      <img src="<%=story.image.url%>" class="w-full rounded-[2.5rem] shadow-2xl object-cover max-h-[550px]" alt="">
    </header>

    <article class="story-body text-slate-700 dark:text-slate-300 mb-16">
      <%=story.story%>
    </article>

    <section class="border-y border-slate-100 dark:border-white/5 py-8 flex justify-between items-center mb-16 relative">
      <div class="flex items-center gap-8">
        <form action="/stories/<%=story._id%>/likes" method="GET" class="like-form flex items-center gap-2" data-story-id="<%=story._id%>">
            <button type="submit" class="hover:scale-110 transition-transform">
                <% if(story.likedBy.includes(currUser.id)) { %>
                    <i class="ri-heart-3-fill text-2xl text-red-500 like-icon"></i>
                <% } else { %>
                    <i class="ri-heart-add-2-line text-2xl text-slate-400 like-icon hover:text-red-400 transition-colors"></i>
                <% } %>
            </button>
            <span class="font-black text-sm likes-count cursor-pointer hover:text-accent transition-colors" data-story-id="<%=story._id%>"><%=story.likesCounts%></span>
        </form>

        <div class="popover-container hidden" id="popover-<%=story._id%>">
          <div class="flex items-center justify-between p-4 border-b dark:border-white/5">
            <span class="text-[10px] font-black uppercase tracking-widest">Liked by</span>
            <button class="close-popover text-xl">&times;</button>
          </div>
          <div id="popover-content-<%=story._id%>" class="max-h-64 overflow-y-auto no-scrollbar p-2"></div>
        </div>

        <div class="flex items-center gap-2 text-slate-400">
            <i class="ri-chat-3-line text-2xl"></i>
            <span class="font-black text-sm"><%=story.comments.length%></span>
        </div>
      </div>

      <div class="flex gap-2">
        <button onclick="shareStory('<%= story._id %>')" class="p-2 text-slate-400 hover:text-accent"><i class="ri-share-forward-line text-2xl"></i></button>
        <div class="relative">
            <button id="options-menu" class="p-2 text-slate-400 hover:text-accent"><i class="ri-more-2-line text-2xl"></i></button>
            <div id="story-option" class="hidden absolute right-0 bottom-full mb-3 w-48 bg-white dark:bg-darkCard rounded-2xl shadow-2xl border dark:border-white/10 py-2 z-50">
                <% if (story.owner._id.equals(currUser._id)) { %>
                    <a href="/stories/<%=story._id%>/edit" class="block px-4 py-2 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-pencil-line mr-2"></i> Edit Story</a>
                    <button id="openModalBtn" class="w-full text-left px-4 py-2 text-sm text-red-500 hover:bg-red-50 transition-colors"><i class="ri-delete-bin-line mr-2"></i> Delete Story</button>
                <% } %>
                <a href="/stories/download/<%=story._id%>" class="block px-4 py-2 text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"><i class="ri-download-cloud-line mr-2"></i> Download PDF</a>
            </div>
        </div>
      </div>
    </section>

    <section class="mb-32 space-y-12">
      <h2 class="font-serif text-3xl font-light italic">Discussion.</h2>
      
      <form action="/comment/<%=story._id%>" method="post">
        <textarea name="comment[comment]" placeholder="Share your response..." required
            class="w-full p-6 rounded-3xl bg-slate-50 dark:bg-slate-900 border-none focus:ring-2 ring-accent/20 outline-none h-36 resize-none text-lg transition-all"></textarea>
        <div class="flex justify-between items-center mt-4">
            <button id="gif-btn" type="button" class="text-slate-500 hover:text-accent font-bold flex items-center gap-2 transition-colors"><i class="ri-file-gif-line text-2xl"></i> Add GIF</button>
            <button type="submit" class="bg-accent text-white px-8 py-3 rounded-2xl font-bold shadow-lg shadow-accent/20 hover:scale-105 transition-transform">Post Response</button>
        </div>
      </form>

      <div id="gif-container" class="hidden bg-slate-50 dark:bg-slate-900 p-6 rounded-[2.5rem] border-2 border-dashed dark:border-slate-800 mb-10">
        <div class="flex gap-2 mb-6">
            <input type="text" id="gif-search" placeholder="Search GIPHY..." class="flex-grow bg-white dark:bg-slate-950 rounded-xl px-4 outline-none">
            <button type="button" onclick="searchGIFs()" class="bg-slate-900 dark:bg-white text-white dark:text-slate-900 px-6 py-2 rounded-xl font-bold">Find</button>
            <button type="button" id="gif-cls" class="p-2"><i class="ri-close-line text-2xl"></i></button>
        </div>
        <div id="gif-results" class="grid grid-cols-2 md:grid-cols-3 gap-3 max-h-80 overflow-y-auto no-scrollbar"></div>
        <form id="comment-gif-form" action="/gif/<%=story._id%>" method="post"><input type="hidden" name="gif" id="selected-gif"></form>
      </div>

      <div class="space-y-12">
        <% for (review of story.comments) { %>
          <div class="flex gap-5 group">
            <img class="w-10 h-10 rounded-full object-cover shadow-md" src="<%=review.author.image.url%>" alt="">
            <div class="flex-grow border-b border-slate-50 dark:border-slate-900 pb-10">
              <div class="flex items-center justify-between mb-2">
                <div>
                  <a href="/profile/<%=review.author._id%>" class="font-bold text-sm hover:text-accent transition-colors"><%=review.author.username%></a>
                  <p class="comment-date text-[10px] font-bold text-slate-400 uppercase tracking-widest mt-1" data-date="<%= review.timeStamp.toISOString() %>"></p>
                </div>
                <% if (review.author._id.equals(currUser._id)) { %>
                    <div class="flex gap-3 opacity-0 group-hover:opacity-100 transition-opacity">
                        <a href="/comment/<%=story._id%>/review/<%=review._id%>" class="text-slate-400 hover:text-accent"><i class="ri-edit-line"></i></a>
                        <form action="/comment/<%=story._id%>/review/<%=review._id%>?_method=DELETE" method="post">
                            <button class="text-slate-400 hover:text-red-500"><i class="ri-delete-bin-line"></i></button>
                        </form>
                    </div>
                <% } %>
              </div>
              <div class="text-slate-600 dark:text-slate-400 leading-relaxed text-lg"><%=review.comment%></div>
              <% if (review.gif) { %> <img src="<%= review.gif %>" class="mt-4 rounded-2xl max-w-full md:max-w-xs shadow-xl" alt=""> <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </section>
  </main>

 

  <script>
    // Logic: Theme Switcher
    const themeBtn = document.getElementById('theme-toggle');
    const themeIcon = document.getElementById('theme-icon');
    if (localStorage.getItem('theme') === 'dark') document.documentElement.classList.add('dark');
    themeBtn.onclick = () => {
      document.documentElement.classList.toggle('dark');
      const isD = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isD ? 'dark' : 'light');
      themeIcon.className = isD ? 'ri-sun-line text-xl' : 'ri-moon-clear-line text-xl';
    };

    // Logic: Profile Toggle
    const setupToggle = (btnId, menuId) => {
        const btn = document.getElementById(btnId);
        const menu = document.getElementById(menuId);
        if(btn && menu) {
            btn.onclick = (e) => { e.stopPropagation(); menu.classList.toggle('hidden'); };
            window.addEventListener('click', () => menu.classList.add('hidden'));
        }
    };
    setupToggle('profile-btn', 'profile-dropdown');
    setupToggle('options-menu', 'story-option');

    // Logic: GIF Search (Preserved)
    async function searchGIFs() {
        const q = document.getElementById('gif-search').value;
        const res = document.getElementById('gif-results');
        if (!q) return;
        res.innerHTML = '<div class="col-span-full py-4 text-center animate-pulse">Searching...</div>';
        try {
            const response = await fetch(`/search-gif?q=${q}`);
            const gifs = await response.json();
            res.innerHTML = gifs.map(g => `<img src="${g.images.fixed_height.url}" onclick="selectGIF('${g.images.fixed_height.url}')" class="rounded-xl cursor-pointer hover:scale-95 transition-transform">`).join('');
        } catch (e) { res.innerHTML = 'Error.'; }
    }
    function selectGIF(url) {
        document.getElementById('selected-gif').value = url;
        document.getElementById('comment-gif-form').submit();
    }
    document.getElementById('gif-btn').onclick = () => document.getElementById('gif-container').classList.toggle('hidden');
    document.getElementById('gif-cls').onclick = () => document.getElementById('gif-container').classList.add('hidden');

    // Logic: Like Forms (Preserved)
    document.querySelectorAll('.like-form').forEach(form => {
        form.addEventListener('submit', async function (e) {
            e.preventDefault();
            const res = await fetch(`/stories/${this.dataset.storyId}/likes`);
            const data = await res.json();
            if (data.success) {
                this.querySelector('.like-icon').className = data.liked ? 'ri-heart-3-fill text-red-500 like-icon text-2xl' : 'ri-heart-add-2-line text-slate-400 like-icon text-2xl';
                this.querySelector('.likes-count').textContent = data.likesCount;
            }
        });
    });

    // Logic: LikedBy Popover (Preserved)
    document.querySelectorAll('.likes-count').forEach(el => {
        el.onclick = async function() {
            const id = this.dataset.storyId;
            const pop = document.getElementById(`popover-${id}`);
            const cont = document.getElementById(`popover-content-${id}`);
            const res = await fetch(`/stories/${id}/likedBy`);
            const story = await res.json();
            cont.innerHTML = story.likedBy.map(u => `
                <a href="/profile/${u._id}" class="flex items-center gap-3 p-3 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-2xl transition-all">
                    <img src="${u.image.url}" class="w-8 h-8 rounded-full object-cover">
                    <span class="text-sm font-bold">${u.username}</span>
                </a>`).join('') || '<p class="p-6 text-center text-xs opacity-50">No likes yet</p>';
            pop.classList.remove('hidden');
        };
    });
    document.querySelectorAll('.close-popover').forEach(b => b.onclick = () => b.closest('.popover-container').classList.add('hidden'));

    // Logic: Formatting Dates
    window.onload = () => {
        gsap.to("#preloader", { opacity: 0, display: 'none', duration: 0.5 });
        
        // Exact story date formatting
        const sd = document.getElementById('story-date');
        sd.innerText = moment(sd.dataset.date).format('MMMM D, YYYY');

        // Relative comment date formatting
        document.querySelectorAll('.comment-date').forEach(el => {
            el.innerText = moment(el.dataset.date).fromNow();
        });
        
        setTimeout(() => document.getElementById('toast-success')?.remove(), 4000);
    };

    // Logic: Poll Badges
    function pollBadges() {
      fetch('/check-unread-notifications').then(r => r.json()).then(d => {
        document.getElementById("red-dot").classList.toggle("hidden", d.unreadCount <= 0);
      });
      fetch('/check-unread-messages').then(r => r.json()).then(d => {
        document.getElementById("message-dot").classList.toggle("hidden", d.unreadCount <= 0);
      });
    }
    setInterval(pollBadges, 5000);

    // Share & Modal
    function shareStory(id) {
        if (navigator.share) navigator.share({ title: '<%=story.title%>', url: window.location.href });
    }
    const modal = document.getElementById('modal');
    document.getElementById('openModalBtn')?.addEventListener('click', () => modal.classList.replace('hidden', 'flex'));
    document.getElementById('cancelBtn')?.addEventListener('click', () => modal.classList.replace('flex', 'hidden'));
  </script>
</body>
</html>