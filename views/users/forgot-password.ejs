<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title><%= title %> | DIARY.</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        accent: '#3b82f6',
                        darkBg: '#121212',
                        darkSurface: '#1e1e1e'
                    },
                    fontFamily: {
                        sans: ['Plus Jakarta Sans', 'Inter', 'sans-serif'],
                        logo: ['Pacifico', 'cursive'],
                    }
                }
            }
        }
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pacifico&family=Plus+Jakarta+Sans:wght@300;400;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; -webkit-font-smoothing: antialiased; }
        .logo-font { font-family: 'Pacifico', cursive; }

        /* Logic: Flash message transitions preserved exactly */
        .flash-message {
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            max-height: 100px;
            opacity: 1;
            overflow: hidden;
            margin-bottom: 1rem;
        }
        .flash-message.hide {
            max-height: 0;
            opacity: 0;
            margin-bottom: 0;
            padding-top: 0;
            padding-bottom: 0;
            transform: translateY(-10px);
        }
    </style>
</head>
<body class="bg-slate-50 dark:bg-darkBg min-h-screen flex items-center justify-center p-6 transition-colors duration-300">

    <div class="max-w-md w-full relative">
        <div class="mb-10 text-center">
            <a href="/stories" class="logo-font text-4xl text-accent drop-shadow-sm">Diary</a>
        </div>

        <div class="bg-white dark:bg-darkSurface p-8 sm:p-10 rounded-[2.5rem] shadow-2xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-white/5">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight uppercase">Reset.</h1>
                <p class="text-slate-500 dark:text-slate-400 mt-2 font-medium">Enter your email to receive a recovery link.</p>
            </div>

            <div id="flash-container">
                <% if (error && error.length) { %>
                    <div class="flash-message bg-red-50 dark:bg-red-500/10 text-red-600 dark:text-red-400 px-5 py-3.5 rounded-2xl flex items-start border border-red-100 dark:border-red-500/20">
                        <i class="ri-error-warning-fill mr-3 text-lg"></i>
                        <span class="font-bold text-sm"><%= error %></span>
                    </div>
                <% } %>

                <% if (success && success.length) { %>
                    <div class="flash-message bg-green-50 dark:bg-green-500/10 text-green-600 dark:text-green-400 px-5 py-3.5 rounded-2xl flex items-start border border-green-100 dark:border-green-500/20">
                        <i class="ri-checkbox-circle-fill mr-3 text-lg"></i>
                        <span class="font-bold text-sm"><%= success %></span>
                    </div>
                <% } %>
            </div>

            <form action="/forgot-password" method="POST" class="space-y-6">
                <div>
                    <label for="email" class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 ml-4 mb-2 block">Registered Email</label>
                    <div class="relative flex items-center">
                        <input type="email" id="email" name="email" required
                            class="w-full bg-slate-50 dark:bg-white/5 px-6 py-4 border-2 border-transparent focus:border-accent/20 focus:bg-white dark:focus:bg-slate-800 rounded-2xl outline-none transition-all dark:text-white font-medium"
                            placeholder="your@email.com">
                        <i class="ri-mail-send-line absolute right-6 text-slate-300 dark:text-slate-600 text-lg"></i>
                    </div>
                </div>

                <button type="submit" 
                    class="w-full bg-accent text-white py-4 px-6 rounded-2xl font-black uppercase tracking-[0.1em] text-sm shadow-xl shadow-accent/20 hover:bg-blue-600 hover:scale-[1.02] active:scale-95 transition-all duration-200">
                    Send Reset Link
                </button>
            </form>

            <div class="mt-8 pt-8 border-t border-slate-50 dark:border-white/5 text-center">
                <a href="/login" class="text-xs font-black uppercase tracking-widest text-slate-400 hover:text-accent transition-colors flex items-center justify-center gap-2">
                    <i class="ri-arrow-left-line"></i> Back to Login
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const flashContainer = document.getElementById('flash-container');
            const messages = flashContainer.querySelectorAll('.flash-message');
            
            // Function to hide and remove a message (Preserved)
            function hideMessage(message) {
                message.classList.add('hide');
                setTimeout(() => {
                    message.remove();
                }, 500); 
            }

            // Dark Mode check
            if (localStorage.getItem('theme') === 'dark') {
                document.documentElement.classList.add('dark');
            }

            // Auto-hide existing messages (Preserved Logic)
            messages.forEach((message, index) => {
                setTimeout(() => {
                    hideMessage(message);
                }, 4000 + (index * 100));
            });

            // Dynamic message adder (Preserved Logic)
            window.addFlashMessage = function(type, text) {
                const message = document.createElement('div');
                const isErr = type === 'error';
                
                message.className = `flash-message ${isErr ? 'bg-red-50 dark:bg-red-500/10 text-red-600' : 'bg-green-50 dark:bg-green-500/10 text-green-600'} px-5 py-3.5 rounded-2xl flex items-start border border-slate-100 dark:border-white/5`;
                
                const icon = document.createElement('i');
                icon.className = `ri-${isErr ? 'error-warning-fill' : 'checkbox-circle-fill'} mr-3 text-lg mt-0.5`;
                
                const span = document.createElement('span');
                span.className = "font-bold text-sm";
                span.textContent = text;
                
                message.appendChild(icon);
                message.appendChild(span);
                flashContainer.appendChild(message);
                
                setTimeout(() => {
                    hideMessage(message);
                }, 4000);
            };
        });
    </script>
</body>
</html>