<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title><%= title %> | DIARY.</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        accent: '#3b82f6',
                        darkBg: '#121212',
                        darkSurface: '#1e1e1e'
                    },
                    fontFamily: {
                        sans: ['Plus Jakarta Sans', 'Inter', 'sans-serif'],
                        logo: ['Pacifico', 'cursive'],
                    }
                }
            }
        }
    </script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Pacifico&family=Plus+Jakarta+Sans:wght@300;400;600;700;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; -webkit-font-smoothing: antialiased; }
        .logo-font { font-family: 'Pacifico', cursive; }

        input:-webkit-autofill { transition: background-color 5000s ease-in-out 0s; }
    </style>
</head>
<body class="bg-slate-50 dark:bg-darkBg min-h-screen flex items-center justify-center p-6 transition-colors duration-300">

    <div class="max-w-md w-full relative">
        <div class="mb-10 text-center">
            <a href="/stories" class="logo-font text-4xl text-accent drop-shadow-sm">Diary</a>
        </div>

        <div class="bg-white dark:bg-darkSurface p-8 sm:p-10 rounded-[2.5rem] shadow-2xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-white/5">
            <div class="text-center mb-10">
                <h1 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight uppercase">Update.</h1>
                <p class="text-slate-500 dark:text-slate-400 mt-2 font-medium">Define your new secure password.</p>
            </div>

            <% if (error && error.length) { %>
                <div class="bg-red-50 dark:bg-red-500/10 text-red-600 dark:text-red-400 px-5 py-3.5 rounded-2xl mb-6 flex items-start border border-red-100 dark:border-red-500/20">
                    <i class="ri-error-warning-fill mr-3 text-lg"></i>
                    <span class="font-bold text-sm"><%= error %></span>
                </div>
            <% } %>

            <form action="/reset-password/<%= token %>" method="POST" class="space-y-6" novalidate>
                <div>
                    <label for="password" class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 ml-4 mb-2 block">New Password</label>
                    <div class="relative flex items-center">
                        <input type="password" id="password" name="password" required minlength="6"
                            class="w-full bg-slate-50 dark:bg-white/5 px-6 py-4 border-2 border-transparent focus:border-accent/20 focus:bg-white dark:focus:bg-slate-800 rounded-2xl outline-none transition-all dark:text-white font-medium"
                            placeholder="••••••••">
                        <i class="ri-lock-password-line absolute right-6 text-slate-300 dark:text-slate-600 text-lg"></i>
                    </div>
                </div>

                <div>
                    <label for="confirmPassword" class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-400 ml-4 mb-2 block">Confirm Password</label>
                    <div class="relative flex items-center">
                        <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6"
                            class="w-full bg-slate-50 dark:bg-white/5 px-6 py-4 border-2 border-transparent focus:border-accent/20 focus:bg-white dark:focus:bg-slate-800 rounded-2xl outline-none transition-all dark:text-white font-medium"
                            placeholder="••••••••">
                        <i class="ri-shield-check-line absolute right-6 text-slate-300 dark:text-slate-600 text-lg"></i>
                    </div>
                </div>

                <button type="submit" 
                    class="w-full bg-accent text-white py-4 px-6 rounded-2xl font-black uppercase tracking-[0.1em] text-sm shadow-xl shadow-accent/20 hover:bg-blue-600 hover:scale-[1.02] active:scale-95 transition-all duration-200">
                    Update Password
                </button>
            </form>

            <div class="mt-8 pt-8 border-t border-slate-50 dark:border-white/5 text-center">
                <a href="/login" class="text-xs font-black uppercase tracking-widest text-slate-400 hover:text-accent transition-colors flex items-center justify-center gap-2">
                    <i class="ri-arrow-left-line"></i> Back to Login
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('form');
            const password = document.getElementById('password');
            const confirmPassword = document.getElementById('confirmPassword');
            
            // Dark Mode check
            if (localStorage.getItem('theme') === 'dark') {
                document.documentElement.classList.add('dark');
            }

            form.addEventListener('submit', (e) => {
                // Remove previous error messages (Preserved Logic)
                document.querySelectorAll('.error-message').forEach(el => el.remove());
                document.querySelectorAll('input').forEach(el => el.classList.remove('border-red-500'));
                
                let isValid = true;
                
                // Password length validation (Preserved Logic)
                if (password.value.length < 6) {
                    showError(password, 'Password must be at least 6 characters');
                    isValid = false;
                }
                
                // Confirm password validation (Preserved Logic)
                if (password.value !== confirmPassword.value) {
                    showError(confirmPassword, 'Passwords do not match');
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    // Smooth scroll to error (Preserved Logic)
                    document.querySelector('.error-message')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            });
            
            // Custom Error Injection (Preserved Logic)
            function showError(input, message) {
                const error = document.createElement('p');
                error.className = 'error-message text-red-500 text-[10px] font-bold uppercase tracking-wider mt-2 ml-4';
                error.textContent = message;
                input.parentNode.appendChild(error);
                
                // Visual feedback on input
                input.classList.add('border-red-500');
                input.classList.remove('focus:border-accent/20');
            }
        });
    </script>
</body>
</html>